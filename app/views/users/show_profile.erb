<!-- USER DETAILS SECTION -->
<section class="section">
  <div class="container">
    <div class="tile is-ancestor">
      <!--- USER AVATAR AND USERNAME -->
      <%= erb :'users/_avatar_card', locals: { user: @user } %>
      <!-- MOST RECENT CRITIQUE -->
      <%= erb :'users/_most_recent_critique', locals: { most_recent_critique: @most_recent_critique } %>

    </div>
  </div>
</section>

<!-- FILTER CRITIQUE SELECTOR -->
<%= erb :'/users/_filter_critiques' %>

<!-- USER CRITIQUES SECTION -->
<section class="section">
  <% @user_critiques.each do |critique| %>
  <%= erb :'users/_critique', locals: { critique: critique } %>
  <% end %>
</section>
<section class="post_review">
	<img class="avatar" src="@User.all.first.avatar" height="40" width="40">
	<div class="dropdown">
		<h4>Subject</h4>
	</div>
	<div class="ripe-or-rotten">
		<p>Ripe Banana</p>
		<p>Rotten Banana</p>
	</div>
	<div class="critique_submit">
		<textarea>CRITIQUE</textarea>
	</div>
	<button>Post</button>
</section>

<button>Generate Workplace Report</button>

<% User.all.each do |user| %>
	<% user.critiques.each do |critique| %>
		<div>
			<% if critique.created_at > Date.today-1%>
				<p><%= critique.content %></p>
			<% end %>
		</div>
	<% end %>
<% end %>

